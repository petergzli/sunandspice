{% stylesheet %}
  /* === TURMERIC GAME ‚Äî all classes prefixed tg- to avoid conflicts === */

  turmeric-game-component {
    position: relative;
    min-height: 150vh;
    overflow: hidden;
    user-select: none;
    background: #2E1503;
    font-family: 'Nunito', sans-serif;
  }

  /* Scene / background */
  .tg-scene {
    position: absolute;
    inset: 0;
    z-index: 0;
    overflow: hidden;
  }
  .tg-sky {
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 45%;
    background: linear-gradient(180deg, #F4845F 0%, #F7B267 30%, #F5D76E 60%, #FFECD2 100%);
  }
  .tg-sun {
    position: absolute;
    top: 8%; right: 15%;
    width: 80px; height: 80px;
    background: radial-gradient(circle, #FFF9C4, #FFD54F 40%, #FF8F00 70%, transparent 72%);
    border-radius: 50%;
    animation: tg-sun-glow 4s infinite alternate;
    box-shadow: 0 0 60px 20px rgba(255,183,77,0.4);
  }
  @keyframes tg-sun-glow {
    from { transform: scale(1); filter: brightness(1); }
    to { transform: scale(1.08); filter: brightness(1.1); }
  }
  .tg-temple { position: absolute; bottom: 55%; left: 8%; font-size: 2.5rem; opacity: 0.25; filter: sepia(1); }
  .tg-temple2 { position: absolute; bottom: 56%; right: 12%; font-size: 1.8rem; opacity: 0.2; filter: sepia(1); }
  .tg-birds {
    position: absolute; top: 14%; left: 30%;
    font-size: 1rem; opacity: 0.4; letter-spacing: 12px;
    animation: tg-drift-birds 18s linear infinite;
  }
  @keyframes tg-drift-birds { from { left: -10%; } to { left: 110%; } }
  .tg-ground {
    position: absolute; bottom: 0; left: 0; right: 0;
    height: 58%;
    background: linear-gradient(180deg, #8D6E3F 0%, #6B4226 15%, #5C3A1E 50%, #4A2E14 100%);
  }
  .tg-paddy-lines {
    position: absolute; bottom: 5%; left: 0; right: 0;
    height: 50%; opacity: 0.08;
    background: repeating-linear-gradient(0deg, transparent, transparent 18px, rgba(255,255,255,0.3) 18px, rgba(255,255,255,0.3) 20px);
  }
  .tg-rangoli-top {
    position: absolute; top: 44%; left: 0; right: 0;
    height: 16px; opacity: 0.5;
    background: repeating-linear-gradient(90deg,
      #FF6F00 0px, #FF6F00 8px, transparent 8px, transparent 12px,
      #C4A0C9 12px, #C4A0C9 20px, transparent 20px, transparent 24px,
      #E8A317 24px, #E8A317 32px, transparent 32px, transparent 36px);
  }
  .tg-petal {
    position: absolute; font-size: 1rem; opacity: 0.6;
    animation: tg-petal-fall linear infinite; z-index: 1;
  }
  @keyframes tg-petal-fall {
    0% { transform: translateY(-20px) rotate(0deg); opacity: 0.7; }
    100% { transform: translateY(100vh) rotate(360deg); opacity: 0; }
  }

  /* HUD */
  .tg-hud {
    display: flex; justify-content: space-between; align-items: center;
    padding: 10px 16px;
    background: linear-gradient(90deg, rgba(196,160,201,0.7), rgba(183,28,28,0.4), rgba(230,81,0,0.6));
    backdrop-filter: blur(8px);
    color: #fff; position: relative; z-index: 10;
    border-bottom: 3px solid rgba(196,160,201,0.5);
  }
  .tg-hud-item { display: flex; align-items: center; gap: 6px; font-size: 1.1rem; font-weight: 700; }
  .tg-hud-item .tg-icon { font-size: 1.3rem; }
  .tg-timer { color: #FFE082; font-family: 'Lilita One', cursive; font-size: 1.5rem; letter-spacing: 1px; }
  .tg-timer.danger { color: #FF5252; animation: tg-pulse 0.5s infinite alternate; }
  @keyframes tg-pulse { to { transform: scale(1.12); } }
  .tg-hud-controls { display: flex; gap: 4px; }
  .tg-hud-btn {
    background: rgba(255,255,255,0.15); border: 2px solid rgba(255,255,255,0.3);
    border-radius: 8px; padding: 4px 10px;
    font-size: 1.1rem; cursor: pointer; color: #fff;
    transition: all 0.15s; line-height: 1;
  }
  .tg-hud-btn:hover { background: rgba(255,255,255,0.25); transform: scale(1.08); }

  /* Title */
  .tg-game-title {
    text-align: center; font-family: 'Lilita One', cursive;
    color: #FFF8E1; font-size: 1.4rem;
    text-shadow: 2px 2px 0 rgba(0,0,0,0.4);
    padding: 6px 0 2px; position: relative; z-index: 10; letter-spacing: 2px;
  }
  .tg-game-title .tg-sub {
    display: block; font-family: 'Nunito', sans-serif;
    font-size: 0.65rem; font-weight: 700; color: #FFE082;
    letter-spacing: 4px; text-transform: uppercase; opacity: 0.8;
  }

  /* Tools */
  .tg-tools {
    display: flex; justify-content: center; gap: 6px;
    padding: 6px 0 10px; position: relative; z-index: 10; flex-wrap: wrap;
  }
  .tg-tool-btn {
    background: rgba(255,248,225,0.9); border: 3px solid transparent;
    border-radius: 12px; padding: 7px 13px;
    font-family: 'Nunito', sans-serif; font-weight: 800; font-size: 0.85rem;
    cursor: pointer; transition: all 0.15s;
    display: flex; align-items: center; gap: 5px;
    box-shadow: 0 3px 8px rgba(0,0,0,0.2); color: #4E2F1B;
  }
  .tg-tool-btn:hover { transform: translateY(-2px); box-shadow: 0 5px 14px rgba(0,0,0,0.25); }
  .tg-tool-btn.active { border-color: #C4A0C9; background: #F3E5F5; transform: scale(1.05); box-shadow: 0 0 12px rgba(196,160,201,0.4); }
  .tg-tool-btn .tg-emoji { font-size: 1.1rem; }

  /* Farm grid */
  .tg-farm-container { display: flex; justify-content: center; padding: 0 10px 20px; position: relative; z-index: 10; }
  .tg-farm-grid {
    display: grid; grid-template-columns: repeat(5, 1fr);
    gap: 7px; max-width: 480px; width: 100%;
  }
  .tg-plot {
    aspect-ratio: 1; background: #6B4226;
    border-radius: 12px; cursor: pointer;
    position: relative; overflow: hidden;
    transition: transform 0.12s, box-shadow 0.12s, background 0.3s;
    box-shadow: inset 0 -4px 0 rgba(0,0,0,0.3), 0 2px 6px rgba(0,0,0,0.25);
    display: flex; align-items: center; justify-content: center;
    border: 2px solid rgba(196,160,201,0.2);
  }
  .tg-plot:hover { transform: scale(1.06); box-shadow: inset 0 -4px 0 rgba(0,0,0,0.3), 0 4px 12px rgba(0,0,0,0.35); }
  .tg-plot:active { transform: scale(0.96); }
  .tg-plot.wet { background: #4E2F1B; }
  .tg-plot.ruined { background: #5D4037; border-color: rgba(255,0,0,0.3); }
  .tg-plot.ruined .tg-plot-content { animation: tg-ruined-shake 0.4s ease-out; filter: grayscale(0.5) brightness(0.7); }
  @keyframes tg-ruined-shake {
    0%, 100% { transform: translateX(0); }
    20% { transform: translateX(-5px); }
    40% { transform: translateX(5px); }
    60% { transform: translateX(-3px); }
    80% { transform: translateX(3px); }
  }

  .tg-plot-content {
    font-size: 2.2rem; transition: transform 0.2s;
    position: relative; z-index: 2;
    display: flex; align-items: center; justify-content: center;
    width: 100%; height: 100%;
  }
  .tg-plot.harvestable .tg-plot-content { animation: tg-wiggle 0.6s infinite; }
  @keyframes tg-wiggle { 0%, 100% { transform: rotate(-4deg); } 50% { transform: rotate(4deg); } }

  /* Effects */
  .tg-sparkle { position: absolute; width: 100%; height: 100%; top: 0; left: 0; pointer-events: none; z-index: 5; }
  .tg-sparkle-particle {
    position: absolute; width: 8px; height: 8px; border-radius: 50%;
    background: #F5CE62; animation: tg-sparkle-fly 0.6s ease-out forwards;
  }
  @keyframes tg-sparkle-fly {
    0% { opacity: 1; transform: translate(0,0) scale(1); }
    100% { opacity: 0; transform: translate(var(--tx), var(--ty)) scale(0); }
  }
  .tg-water-drop {
    position: absolute; font-size: 1rem;
    animation: tg-drop-fall 0.5s ease-in forwards;
    pointer-events: none; z-index: 5;
  }
  @keyframes tg-drop-fall {
    0% { opacity: 1; transform: translateY(-10px); }
    100% { opacity: 0; transform: translateY(20px); }
  }
  .tg-progress-bar {
    position: absolute; bottom: 4px; left: 10%; width: 80%; height: 5px;
    background: rgba(0,0,0,0.3); border-radius: 3px; overflow: hidden; z-index: 3;
  }
  .tg-progress-fill {
    height: 100%; border-radius: 3px; transition: width 0.3s;
    background: linear-gradient(90deg, #4CAF50, #E8A317);
  }
  .tg-water-count {
    position: absolute; top: 3px; right: 5px;
    font-size: 0.55rem; font-weight: 800;
    color: rgba(255,255,255,0.7); z-index: 3;
  }

  /* Overlays */
  .tg-overlay {
    position: absolute; inset: 0;
    background: rgba(46,21,3,0.75); backdrop-filter: blur(6px);
    display: flex; align-items: center; justify-content: center;
    z-index: 100; animation: tg-fadeIn 0.3s;
  }
  @keyframes tg-fadeIn { from { opacity: 0; } }
  .tg-overlay-box {
    background: linear-gradient(135deg, #FFF8E1, #FFE0B2);
    border-radius: 24px; padding: 32px 36px; text-align: center;
    box-shadow: 0 12px 40px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.5);
    max-width: 380px; width: 90%; border: 3px solid #C4A0C9;
  }
  .tg-overlay-box h2 { font-family: 'Lilita One', cursive; font-size: 1.9rem; color: #C4A0C9; margin-bottom: 6px; }
  .tg-overlay-box .tg-score-display { font-family: 'Lilita One', cursive; font-size: 3rem; color: #C4A0C9; margin: 10px 0; text-shadow: 1px 1px 0 rgba(0,0,0,0.1); }
  .tg-overlay-box p { font-size: 1rem; color: #5D4037; margin-bottom: 14px; line-height: 1.5; }
  .tg-overlay-box .tg-rules {
    font-size: 0.82rem; color: #795548;
    background: rgba(255,255,255,0.5); border-radius: 10px;
    padding: 10px 14px; margin-bottom: 16px; text-align: left; line-height: 1.7;
  }
  .tg-overlay-btn {
    background: linear-gradient(135deg, #C4A0C9, #C75B39);
    color: #fff; border: none; padding: 14px 34px;
    border-radius: 14px; font-family: 'Lilita One', cursive; font-size: 1.2rem;
    cursor: pointer; box-shadow: 0 4px 12px rgba(196,160,201,0.4);
    transition: transform 0.12s; letter-spacing: 1px;
  }
  .tg-overlay-btn:hover { transform: scale(1.06); }
  .tg-overlay-btn:active { transform: scale(0.96); }

  .tg-float-text {
    position: fixed; font-family: 'Lilita One', cursive; font-size: 1.5rem;
    text-shadow: 1px 1px 0 rgba(0,0,0,0.3);
    pointer-events: none; z-index: 50; animation: tg-float-up 0.9s ease-out forwards;
  }
  .tg-float-text.good { color: #E8A317; }
  .tg-float-text.bad { color: #F44336; }
  @keyframes tg-float-up {
    0% { opacity: 1; transform: translateY(0) scale(1); }
    100% { opacity: 0; transform: translateY(-55px) scale(1.2); }
  }

  @media (max-width: 480px) {
    .tg-farm-grid { grid-template-columns: repeat(4, 1fr); gap: 6px; }
    .tg-tool-btn { padding: 6px 10px; font-size: 0.78rem; }
    .tg-hud-item { font-size: 0.95rem; }
    .tg-timer { font-size: 1.25rem; }
  }
{% endstylesheet %}

