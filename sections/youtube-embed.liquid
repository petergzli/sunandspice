<section
  class="section"
  style="{%- render 'spacing-style', settings: section.settings %};"
>
  {%- if section.settings.video_url != blank -%}
    <div class="page-width">
      {%- if section.settings.heading != blank -%}
        <h2 class="youtube-embed__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      <div class="youtube-embed__wrapper">
        <iframe
          src="{{ section.settings.video_url }}"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
          loading="lazy"
        ></iframe>
      </div>
    </div>
  {%- endif -%}
</section>

{% stylesheet %}
  .youtube-embed__heading {
    font-family: var(--font-heading--family);
    font-size: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 400;
    text-align: center;
    margin-bottom: 1.5em;
  }
  .youtube-embed__wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
    border-radius: 4px;
  }
  .youtube-embed__wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "YouTube Embed",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "YouTube embed URL",
      "info": "Use the embed URL, e.g. https://www.youtube.com/embed/VIDEO_ID"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "YouTube Embed"
    }
  ]
}
{% endschema %}
